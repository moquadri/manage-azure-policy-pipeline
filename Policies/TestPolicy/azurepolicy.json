{
  "Name": "New Pipeline Policy V 0.1",
  "properties": {
    "displayName": "New Pipeline Policy",
    "description": "TEST - Policy for Monitoring whether Redis Cache has a non-SSL port enabled and the Minimum allowed TLS Version",
    "mode": "All",
    "metadata": {
      "category": "Cache",
      "version": "1.0"
    },
    "policyRule": {
      "if": {
        "allof": [
          {
            "field": "type",
            "equals": "Microsoft.Cache/Redis"
          },
          {
            "anyOf": [
              {
                "field": "Microsoft.Cache/Redis/enableNonSslPort",
                "notIn": "[parameters('enableNonSslPort')]"
              },
              {
                "field": "Microsoft.Cache/Redis/minimumTlsVersion",
                "notIn": "[parameters('minimumTlsVersion')]"
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    },
    "parameters": {
      "effect": {
        "type": "string",
        "defaultValue": "Audit",
        "allowedValues": [
          "Audit",
          "Deny"
        ],
        "metadata": {
          "displayName": "Effect",
          "description": "Define the effect of the Policy as Audit or Deny"
        }
      },
      "enableNonSslPort": {
        "type": "array",
        "metadata": {
          "displayName": "TEST POLICY",
          "description": "Advanced Setting to Enable Non-SSL Port (True) or not (False)",
          "controlID": "N/A",
          "risk": "Intrusion"
        },
        "allowedValues": [
          true,
          false
        ],
        "defaultValue": [
          true,
          false
        ]
      },
      "minimumTlsVersion": {
        "type": "array",
        "metadata": {
          "displayName": "Minimum TLS Version",
          "description": "Select the Minimum TLS Version to monitor. Redis Caches default to the latest version and return a value of null. TLS 1.0 was proven compromised and should be avoided.",
          "controlID": "N/A",
          "risk": "Data Leakage"
        },
        "allowedValues": [
          "1.0",
          "1.1",
          "1.2",
          null
        ],
        "defaultValue": [
          "1.0",
          "1.1",
          "1.2",
          null
        ]
      }
    }
  }
}